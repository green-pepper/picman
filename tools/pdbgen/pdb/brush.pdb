    success = FALSE;
}
CODE
    );
}

sub brush_get_info {
    $blurb = "Retrieve information about the specified brush.";

    $help = <<'HELP';
This procedure retrieves information about the specified brush. This
includes the brush name, and the brush extents (width and height).
HELP

    &mitch_pdb_misc('2004', '2.2');

    @inargs = (
	{ name => 'name', type => 'string', non_empty => 1,
	  desc => 'The brush name' }
    );

    @outargs = (
	{ name => 'width', type => 'int32', void_ret => 1,
          desc => 'The brush width' },
	{ name => 'height', type => 'int32',
          desc => 'The brush height' },
	{ name => 'mask_bpp', type => 'int32',
          desc => 'The brush mask bpp' },
	{ name => 'color_bpp', type => 'int32',
          desc => 'The brush color bpp' }
    );

    %invoke = (
	code => <<'CODE'
{
  PicmanBrush *brush = picman_pdb_get_brush (picman, name, FALSE, error);

  if (brush)
    {
      width     = picman_temp_buf_get_width  (brush->mask);
      height    = picman_temp_buf_get_height (brush->mask);
      mask_bpp  = babl_format_get_bytes_per_pixel (picman_temp_buf_get_format (brush->mask));
      color_bpp = brush->pixmap ? babl_format_get_bytes_per_pixel (picman_temp_buf_get_format (brush->pixmap)) : 0;
    }
  else
    success = FALSE;
}
CODE
    );
}

sub brush_get_pixels {
    $blurb = 'Retrieve information about the specified brush.';

    $help = <<'HELP';
This procedure retrieves information about the specified brush. This
includes the brush extents (width and height) and its pixels data.
HELP

    &mitch_pdb_misc('2004', '2.2');

    @inargs = (
	{ name => 'name', type => 'string', non_empty => 1,
	  desc => 'The brush name' }
    );

    @outargs = (
	{ name => 'width', type => 'int32', void_ret => 1,
          desc => 'The brush width' },
	{ name => 'height', type => 'int32',
          desc => 'The brush height' },
	{ name => 'mask_bpp', type => 'int32',
          desc => 'The brush mask bpp' },
        { name => 'mask_bytes', type => 'int8array',
	  desc => 'The brush mask data',
          array => { desc => 'Length of brush mask data' } },
	{ name => 'color_bpp', type => 'int32',
          desc => 'The brush color bpp' },
        { name => 'color_bytes', type => 'int8array',
	  desc => 'The brush color data',
          array => { desc => 'Length of brush color data' } }
    );

    %invoke = (
	code => <<'CODE'
{
  PicmanBrush *brush = picman_pdb_get_brush (picman, name, FALSE, error);

  if (brush)
    {
      width          = picman_temp_buf_get_width  (brush->mask);
      height         = picman_temp_buf_get_height (brush->mask);
      mask_bpp       = babl_format_get_bytes_per_pixel (picman_temp_buf_get_format (brush->mask));
      num_mask_bytes = picman_temp_buf_get_height (brush->mask) *
                       picman_temp_buf_get_width  (brush->mask) * mask_bpp;
      mask_bytes     = g_memdup (picman_temp_buf_get_data (brush->mask),
                                 num_mask_bytes);

      if (brush->pixmap)
        {
          color_bpp       = babl_format_get_bytes_per_pixel (picman_temp_buf_get_format (brush->pixmap));
          num_color_bytes = picman_temp_buf_get_height (brush->pixmap) *
                            picman_temp_buf_get_width  (brush->pixmap) *
                            color_bpp;
          color_bytes     = g_memdup (picman_temp_buf_get_data (brush->pixmap),
                                      num_color_bytes);
        }
    }
  else
    success = FALSE;
}
CODE
    );
}

