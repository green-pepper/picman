sub brush_new {
    $blurb = "Creates a new brush";
    $help  = "This procedure creates a new, uninitialized brush";

    &mitch_pdb_misc('2004', '2.2');

    @inargs = (
	{ name => 'name', type => 'string', non_empty => 1,
	  desc => 'The requested name of the new brush' }
    );

    @outargs = (
	{ name => 'actual_name', type => 'string',
	  desc => 'The actual new brush name' }
    );

    %invoke = (
        code => <<'CODE'
{
  PicmanData *data = picman_data_factory_data_new (picman->brush_factory,
                                               context, name);

  if (data)
    actual_name = g_strdup (picman_object_get_name (data));
  else
    success = FALSE;
}
CODE
    );
}

sub brush_duplicate {
    $blurb = "Duplicates a brush";
    $help  = "This procedure creates an identical brush by a different name";

    &mitch_pdb_misc('2004', '2.2');

    @inargs = (
	{ name => 'name', type => 'string', non_empty => 1,
	  desc => 'The brush name' }
    );

    @outargs = (
	{ name => 'copy_name', type => 'string',
	  desc => "The name of the brush's copy" }
    );

    %invoke = (
        code => <<'CODE'
{
  PicmanBrush *brush = picman_pdb_get_brush (picman, name, FALSE, error);

  if (brush)
    {
      PicmanBrush *brush_copy = (PicmanBrush *)
        picman_data_factory_data_duplicate (picman->brush_factory,
                                          PICMAN_DATA (brush));

      if (brush_copy)
        copy_name = g_strdup (picman_object_get_name (brush_copy));
      else
        success = FALSE;
    }
  else
    success = FALSE;
}
CODE
    );
}

sub brush_is_generated {
    $blurb = "Tests if brush is generated";
    $help  = "Returns TRUE if this brush is parametric, FALSE for other types";

    &bill_pdb_misc('2004', '2.4');

    @inargs = (
	{ name => 'name', type => 'string', non_empty => 1,
	  desc => 'The brush name' }
    );

    @outargs = (
	{ name => 'generated', type => 'boolean',
	  desc => 'TRUE if the brush is generated' }
