sub brush_rename {
    $blurb = "Rename a brush";
    $help  = "This procedure renames a brush";

    &mitch_pdb_misc('2004', '2.2');

    @inargs = (
	{ name => 'name', type => 'string', non_empty => 1,
	  desc => 'The brush name' },
        { name => 'new_name', type => 'string', non_empty => 1,
          desc => 'The new name of the brush' }
    );

    @outargs = (
	{ name => 'actual_name', type => 'string',
	  desc => 'The actual new name of the brush' }
    );

    %invoke = (
	code => <<'CODE'
{
  PicmanBrush *brush = picman_pdb_get_brush (picman, name, TRUE, error);

  if (brush)
    {
      picman_object_set_name (PICMAN_OBJECT (brush), new_name);
      actual_name = g_strdup (picman_object_get_name (brush));
    }
  else
    success = FALSE;
}
CODE
    );
}

sub brush_delete {
    $blurb = "Deletes a brush";
    $help  = "This procedure deletes a brush";

    &mitch_pdb_misc('2004', '2.2');

    @inargs = (
	{ name => 'name', type => 'string', non_empty => 1,
	  desc => 'The brush name' }
    );

    %invoke = (
	code => <<'CODE'
{
  PicmanBrush *brush = picman_pdb_get_brush (picman, name, FALSE, error);

  if (brush && picman_data_is_deletable (PICMAN_DATA (brush)))
