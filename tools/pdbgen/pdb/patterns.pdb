sub patterns_refresh {
    $blurb = 'Refresh current patterns. This function always succeeds.';

    $help = <<'HELP';
This procedure retrieves all patterns currently in the user's pattern path
and updates all pattern dialogs accordingly.
HELP

    &mitch_pdb_misc('2002');

    %invoke = (
        code => <<'CODE'
{
  picman_data_factory_data_refresh (picman->pattern_factory, context);
}
CODE
    );
}

sub patterns_get_list {
    $blurb = 'Retrieve a complete listing of the available patterns.';

    $help = <<'HELP';
This procedure returns a complete listing of available PICMAN patterns. Each name
returned can be used as input to the picman_context_set_pattern().
HELP

    &std_pdb_misc;

    @inargs = (
	{ name => 'filter', type => 'string', null_ok => 1,
          desc => 'An optional regular expression used to filter the list' }
    );

    @outargs = (
	{ name => 'pattern_list', type => 'stringarray',
	  desc => 'The list of pattern names',
	  array => { name => 'num_patterns',
		     desc => 'The number of patterns in the pattern list' } }
    );

    %invoke = (
        headers => [ qw("core/picmancontainer-filter.h") ],
	code => <<'CODE'
{
  pattern_list = picman_container_get_filtered_name_array (picman_data_factory_get_container (picman->pattern_factory),
                                                         filter, &num_patterns);
}
CODE
    );
}

sub patterns_get_pattern {
    &std_pdb_deprecated ('picman-context-get-pattern');

    @outargs = (
	{ name => 'name', type => 'string',
	  desc => 'The pattern name' },
	{ name => 'width', type => 'int32',
	  desc => 'The pattern width' },
	{ name => 'height', type => 'int32',
	  desc => 'The pattern height' }
    );

    %invoke = (
	code => <<'CODE'
{
  PicmanPattern *pattern = picman_context_get_pattern (context);

  if (pattern)
    {
      name   = g_strdup (picman_object_get_name (pattern));
      width  = picman_temp_buf_get_width  (pattern->mask);
      height = picman_temp_buf_get_height (pattern->mask);
    }
  else
    success = FALSE;
}
CODE
    );
}

sub patterns_get_pattern_data {
    &std_pdb_deprecated ('picman-pattern-get-pixels');

    @inargs = (
	{ name => 'name', type => 'string', null_ok => 1,
	  desc => 'The pattern name ("" means currently active pattern)' }
    );

    @outargs = (
	{ name => 'actual_name', type => 'string',
	  desc => 'The pattern name' },
	{ name => 'width', type => 'int32',
	  desc => 'The pattern width' },
	{ name => 'height', type => 'int32',
	  desc => 'The pattern height' },
	{ name => 'mask_bpp', type => 'int32',
	  desc => 'Pattern bytes per pixel' },
	{ name => 'mask_data', type => 'int8array',
	  desc => 'The pattern mask data',
	  array => { name => 'length',
		     desc => 'Length of pattern mask data' } }
    );
    
    %invoke = (
	code => <<'CODE'
{
  PicmanPattern *pattern;

  if (name && strlen (name))
    pattern = picman_pdb_get_pattern (picman, name, error);
  else
    pattern = picman_context_get_pattern (context);

  if (pattern)
    {
      actual_name = g_strdup (picman_object_get_name (pattern));
      width       = picman_temp_buf_get_width  (pattern->mask);
      height      = picman_temp_buf_get_height (pattern->mask);
      mask_bpp    = babl_format_get_bytes_per_pixel (picman_temp_buf_get_format (pattern->mask));
      length      = picman_temp_buf_get_data_size (pattern->mask);
      mask_data   = g_memdup (picman_temp_buf_get_data (pattern->mask), length);
    }
  else
    success = FALSE;
}
CODE
    );
}


@headers = qw(<string.h>
              "core/picman.h"
              "core/picmancontext.h"
              "core/picmandatafactory.h"
              "core/picmanpattern.h"
              "core/picmantempbuf.h"
              "picmanpdb-utils.h");

@procs = qw(patterns_refresh
            patterns_get_list
            patterns_get_pattern
            patterns_get_pattern_data);

%exports = (app => [@procs], lib => [@procs]);

$desc = 'Patterns';
$doc_title = 'picmanpatterns';
$doc_short_desc = 'Functions relating to patterns.';
$doc_long_desc = 'Functions relating to patterns.';

1;
